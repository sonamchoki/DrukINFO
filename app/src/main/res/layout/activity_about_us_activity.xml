<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.karma.splashscreen.AboutUs_activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developer "
        android:paddingTop="5dp"
        android:textSize="25sp"
        android:background="#dc237689"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aboutUs_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:paddingBottom="35dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guided by: "
        android:textSize="25sp"
        android:background="#dc237689"
        android:paddingTop="15dp"
        android:textColor="#000"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mr.Karma Wangchuk"
        android:textColor="#000"
        android:textSize="20sp"
        android:paddingBottom="35dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About App "
        android:textSize="25sp"
        android:textColor="#000"
        android:background="#dc237689"
        android:paddingTop="15dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Druk Info is an app containing informations about Bhutan"
        android:textSize="20sp"
        android:paddingBottom="55dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact "
        android:background="#dc237689"
        android:textSize="25sp"
        android:paddingTop="15dp"
        android:textColor="#000"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aboutUs_content1"
        android:textColor="#000"
        android:textSize="20sp"
        />
</LinearLayout>
